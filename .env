# DCS-Best Risk Register System - Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Configuration
APP_NAME="DCS Risk Register"
APP_ENV=local
APP_KEY=base64:gwXCFIYqPR7N40ln1bv2xIMlnDcOIGNIXqYXyMKN0CY=
APP_DEBUG=true
APP_URL=http://localhost/well-known
APP_TIMEZONE=UTC

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=dcs_best
DB_USERNAME=root
DB_PASSWORD=
DB_SOCKET=

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=your_redis_password
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=dcs_best_cache_

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_SECURE_COOKIES=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Queue Configuration
QUEUE_CONNECTION=database

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host
MAIL_PORT=587
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# Logging Configuration
LOG_CHANNEL=stack
LOG_LEVEL=info
LOG_DEPRECATIONS_CHANNEL=null

# Performance Configuration
DASHBOARD_CACHE_DURATION=300
DASHBOARD_CACHE_ENABLED=true
RISK_MATRIX_CACHE_DURATION=300
RISK_MATRIX_CACHE_ENABLED=true
CLIENT_STATS_CACHE_DURATION=600
CLIENT_STATS_CACHE_ENABLED=true

# Database Performance
DB_QUERY_TIMEOUT=30
DB_SLOW_QUERY_THRESHOLD=0.5
DB_ENABLE_QUERY_LOGGING=false
DB_CONNECTION_POOL_SIZE=10

# Frontend Performance
FRONTEND_AUTO_REFRESH=300000
FRONTEND_LAZY_LOADING=true
FRONTEND_IMAGE_OPTIMIZATION=true
FRONTEND_MINIFY_ASSETS=true

# Monitoring & Analytics
PERFORMANCE_TRACKING=true
MEMORY_USAGE_THRESHOLD=50
CACHE_EFFICIENCY_TRACKING=true
SLOW_QUERY_LOGGING=true

# API Configuration
API_RATE_LIMITING=true
API_RATE_LIMIT=60
API_RESPONSE_CACHING=true
API_CACHE_TTL=300
API_COMPRESSION=true
API_GZIP_LEVEL=6

# Search Configuration
FULLTEXT_SEARCH_ENABLED=true
FULLTEXT_MIN_WORD_LENGTH=3
ELASTICSEARCH_ENABLED=false
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# File Upload Configuration
IMAGE_COMPRESSION_ENABLED=true
IMAGE_COMPRESSION_QUALITY=85
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080
FILE_MAX_SIZE=10240
FILE_ALLOWED_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Security Configuration
BCRYPT_ROUNDS=12

# Broadcasting Configuration (Optional)
BROADCAST_DRIVER=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

# Additional Services (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# External APIs (Optional)
GOOGLE_ANALYTICS_ID=
SLACK_WEBHOOK_URL=
